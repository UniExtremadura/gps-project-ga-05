<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.Proyecto_en_la_sombra"
        tools:targetApi="31">
        <activity
            android:name=".screens.PreviewScreens"
            android:exported="false"
            android:label="@string/title_activity_preview_screens"
            android:theme="@style/Theme.Proyecto_en_la_sombra" />
        <activity
            android:name=".screens.RegisterActivity"
            android:exported="false"
            android:label="@string/title_activity_register"
            android:theme="@style/Theme.Proyecto_en_la_sombra" />
        <activity
            android:name=".screens.ProfileOrganizationScreen"
            android:exported="false"
            android:label="@string/title_activity_profile_organization_screen"
            android:theme="@style/Theme.Proyecto_en_la_sombra" />
        <activity
            android:name=".screens.AnimalView"
            android:exported="true"
            android:label="@string/title_activity_main2"
            android:theme="@style/Theme.Proyecto_en_la_sombra" />
        <activity
            android:name=".MainActivity"
            android:exported="true"
            android:label="@string/app_name"
            android:theme="@style/Theme.Proyecto_en_la_sombra">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>